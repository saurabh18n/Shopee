@model List<Shopee.Models.Order>
@{
    ViewData["Title"] = "Orders";
}
<div class="row justify-content-center align-content-cente">
    <div class="col-sm-12 col-md-8 col-lg-8 col-xl-8">
        @{string acid;}
        @foreach (Order ord in Model)
        {
            <div class="row my-2">
                @{acid ="a"+ ord.Id.ToString().Replace("-","");}
                    <div class="accordion" id="@acid">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="h1@{@acid}}">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#c1@{@acid}" aria-expanded="true" aria-controls="c1@{@acid}">
                                Order Summery
                            </button>
                        </h2>
                        <div id="c1@{@acid}" class="accordion-collapse collapse show" aria-labelledby="h1@{@acid}}"
                        data-bs-parent="#@acid">
                            <div class="accordion-body">
                                <div class="progress" style="height: 30px;">
                                    @{
                                        var colors = new string[] { "bg-secondary", "bg-primary", "bg-primary", "bg-success",
                                                        "bg-danger" };
                                        var plength = new int[] { 20, 50, 70, 100, 100 };
                                    }
                                    <div class="progress-bar @(colors[(int)ord.Status])" role="progressbar"
                                    style="width: @(plength[(int)ord.Status])%;" aria-valuenow="25" aria-valuemin="0"
                                    aria-valuemax="100">
                                        @ord.Status
                                    </div>
                                </div>
                                <div class="my-3">
                                    <p>Hello @(User?.FindFirst(c=> c.Type=="FName")?.Value ?? ""), Your Order for
                                        <strong> @(ord.Items[0].Product.Title) @(ord.Items.Count > 1? $" and { @ord.Items.Count -1} more item(s)  ":"")
                                            is </strong> @ord.Status
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                Items
                            </button>
                        </h2>
                        <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingTwo"
                        data-bs-parent="#@acid">
                            <div class="accordion-body">
                                <div class="my-3">
                                    <p> Your Order for
                                        <strong> @(ord.Items[0].Product.Title) @(ord.Items.Count > 1? $" and { @ord.Items.Count -1} more item(s)  ":"")
                                            is </strong> being delivered to <strong>@ord.Address</strong>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Address
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo"
                        data-bs-parent="#@acid">
                            <div class="accordion-body">
                                <div class="my-3">
                                    <p> Your Order for
                                        <strong> @(ord.Items[0].Product.Title) @(ord.Items.Count > 1? $" and { @ord.Items.Count -1} more item(s)  ":"")
                                            is </strong> being delivered to <strong>@ord.Address</strong>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="h3@{@acid}">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Payment
                            </button>
                        </h2>
                        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="h3@{@acid}"
                         data-bs-parent="#@acid">
                            <div class="accordion-body">
                                <table class="table">
                                    <tr>
                                        @{
                                            var Payments = new string[] { "Credit Card", "Debit Card", "Net Banking", "UPI",
                                                                    "Cash On Delivery" };
                                            var PaymentsLba = new string[] { "Card Number", "Card Number", "Bank", "URI",
                                                                    "Cash On Delivery" };
                                            var PaymentsLbb = new string[] { "Expiry", "Expiry", "Account", "@",
                                                                    "Cash On Delivery" };
                                        }
                                        <td>Payment By</td>
                                        <td>@Payments[(int)ord.Payment]</td>
                                    </tr>
                                    @if((int)ord.Payment != 5){
                                        <tr>
                                            <td>@PaymentsLba[(int)ord.Payment]</td>
                                            <td>@ord.pda]</td>
                                        </tr>
                                        <tr>
                                                    <td>@PaymentsLbb[(int)ord.Payment]</td>
                                                    <td>@ord.pdb</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>