@model List<Shopee.Models.ProductCategory>
@{
    ViewData["Title"] = "Categories";
}

<div class="row">
    <div class="col-md-4 mx-auto">
        <table class="table table-border">
            <tr>
                <th class="d-none">
                    Id
                </th>
                <th>
                    Description
                </th>
                <th>
                    Parent Category
                </th>
                <th>

                </th>
            </tr>
            @foreach (ProductCategory item in ViewBag.Categories)
            {
                <tr>
                    <td class="d-none">@item.Id</td>
                    <td>@item.Category</td>
                    <td>@(item.ParentCategory?.Category ?? "-")</td>
                    <td>
                        <a class="btn btn-outline btn-outline-primary  my-1 mx-1" asp-action="Edit"
                        asp-controller="Category" asp-route-Id="@item.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a class="btn btn-outline-secondary my-1 mx-1" asp-action="Delete" asp-controller="Category">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </table>

    </div>
</div>