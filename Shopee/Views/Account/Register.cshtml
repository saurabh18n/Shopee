@model Shopee.Models.User

@{
    ViewData["Title"] = "Resister";
}
<div class="row justify-content-center align-content-center" style="height:80vh">
    <div class="col col-sm-12 col-md-8 col-lg-8 col-xl-8 p-3">
        <div class="d-flex flex-column p-3">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-2">
                    <input asp-for="Username" class="form-control" placeholder="Username" required autocomplete="off" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="Password" class="form-control" placeholder="Password" required autocomplete="off" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="FirstName" class="form-control" placeholder="First Name" required autocomplete="off" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="Location" class="form-control" placeholder="Location" required autocomplete="off" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="Email" class="form-control" placeholder="Email" required autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="ContactNumber" class="form-control" placeholder="Number" required autocomplete="off" pattern="[0-9]{10}" />
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <textarea asp-for="Address" class="form-control" placeholder="Address" required autocomplete="off"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
            <div class="alert alert-danger mx-auto mt-3 text-center @(string.IsNullOrEmpty((string)ViewBag.ErrorMessage) ? "d-none" : "")" style="width: 800px;" role="alert">
                <p class="mx-auto my-auto p-0">@ViewBag.ErrorMessage</p>
            </div>
        </div>
    </div>
</div>