@model OnlineShoppingWebApp.Models.User

@{
    ViewData["Title"] = "Resister";
}
<div class="row justify-content-center align-content-center" style="height:80vh">
    <div class="col col-sm-12 col-md-8 col-lg-8 col-xl-8 p-3">
        <div class="d-flex flex-column p-3">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-2">
                    <input asp-for="Username" class="form-control" placeholder="Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="Location" class="form-control" placeholder="Location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input asp-for="ContactNumber" class="form-control" placeholder="Number" />
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>