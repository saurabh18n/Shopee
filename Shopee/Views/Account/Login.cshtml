@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center align-content-center" style="height:70vh">
    <div class="col col-sm-12 col-md-8 col-lg-8 col-xl-8 p-3">
        <div class="d-flex justify-content-center align-content-center">
            <div class="d-flex flex-column justify-content-center align-content-center p-3"
                style="width:400px;min-width:200px;background-color:#9edeaf;">
                <div class="mb-3">
                    <h5 class="text-center">Not having account</h5>
                </div>
                <div class="mb-3">
                    <a class="from-control btn btn-block btn-success w-100" asp-action="Register"
                        asp-controller="Account">Register</a>
                </div>
            </div>
            <div class="d-flex flex-column p-3"
                style="width:400px;min-width:200px;;border-style:solid;border-width:2px;border-color: #9edeaf;">
                <div class="mb-3">
                    <h4>Login</h4>
                </div>
                <form method="post" asp-action="login" asp-controller="account" enctype="multipart/form-data">
                    <div class="mb-3">
                        <input type="text" class="form-control" id="username" name="username" placeholder="Username"
                            autocomplete="off">
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password"
                            autocomplete="current-password">
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="from-control btn btn-block btn-primary w-100">Login</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="alert alert-danger mx-auto mt-3 text-center @(string.IsNullOrEmpty((string)ViewBag.ErrorMessage) ? "d-none" : "")"
            style="width: 800px;" role="alert">
            <p class="mx-auto my-auto p-0">@ViewBag.ErrorMessage</p>
        </div>
    </div>

</div>
