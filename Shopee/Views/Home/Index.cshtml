@{
    ViewData["Title"] = "Home Page";
}
<div class="row justify-content-center align-content-center">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" style="width: 1200px;">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1">
            </button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2">
            </button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3">
            </button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4">
            </button>
        </div>
        <div class="carousel-inner" style="height:300;">
            <div class="carousel-item active">
                <img src="https://i.picsum.photos/id/815/800/300.jpg?hmac=ozGb5nEnJGQTLyEfeFdad3_CamJkbmHlJTGJ4QOfm88"
                    class="img-fluid d-block" style="height:400px;width:1200px" />
            </div>
            <div class="carousel-item">
                <img src="https://i.picsum.photos/id/885/800/300.jpg?hmac=z0Y4wKX3_6EGbtKvRhQ82svLIsEvYAjJtxJMLqg6Ux8"
                    class="img-fluid d-block" style="height: 400px;width:1200px"">
            </div>
             <div class=" carousel-item">
                <img src="https://i.picsum.photos/id/796/800/300.jpg?hmac=yGK2C7hOyh_2-coaF8tbFFAnary1j8WoEMcZdX4hPgI"
                    class="img-fluid d-block" style="height: 400px;width:1200px"">
            </div>
             <div class=" carousel-item">
                <img src="https://i.picsum.photos/id/630/800/300.jpg?hmac=NWCal408sgTmQdcshrvmTIoiwPTjwTsorT-ONHBdHBY"
                    class="img-fluid d-block" style="height: 400px;width:1200px"">
            </div>
        </div>
        <button class=" carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
</div>
<hr>
<div class="row justify-content-center align-content-center" name="new-product-list" style="">
    @foreach (Product item in ViewBag.NewProducts)
    {

    <div class="card mx-2" style="width: 18rem;">
        <a class="card-block stretched-link text-decoration-none" href="\product\p\@item.Id">
            <div style="height:200px; width:100%;overflow:hidden;">
                <img class="img-fluid" style=""
                    src="data:image/png;base64,@Convert.ToBase64String(item.Images.First().Image)" />
            </div>
            <div class="card-body text-center">
                <p class="card-title text-decoration-none">@item.Title</p>
            </div>
        </a>
    </div>
    }
</div>
<hr>