@model List<Shopee.Models.CartItem>
@{
    ViewData["Title"] = "Products";
}
<div class="row justify-content-center align-content-cente">

    <div class="col-sm-12 col-md-8 col-lg-8 col-xl-8">
        <h6>Your Cart</h6>
        <table class="table table-sm table-striped table-bordered">
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Tax</th>
                <th>Amount</th>
                <td></td>
            </tr>
            @{
                double total = 0;
                double TotalTax = 0;
            }
            @foreach (CartItem item in Model)
            {
                <tr>
                    <td>@item.Product.Title</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.UnitPrice</td>
                    @{
                        double itemTotal = item.Quantity * item.Product.UnitPrice;
                        double itemTax = (itemTotal * item.Product.tax) / 100;
                        total += (itemTax + itemTotal);
                        TotalTax += itemTax;
                    }
                    <td>@itemTax </td>
                    <td>@(itemTotal+itemTax)</td>
                    <td>
                        <a class="btn btn-danger" asp-controller="cart" asp-action="Remove" asp-route-Id="@item.Id">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
            <tr>
                <th colspan="3"></th>
                <th>Total</th>
                <th>@total</th>
            </tr>

        </table>
    </div>
</div>