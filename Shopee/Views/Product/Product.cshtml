@model Shopee.Models.Product
@{
    ViewData["Title"] = "Products";
}
@{
    Product prod = ViewBag.Product;
    

}

<div class="row px-2">
    <div class="col-sm-12 col-md-4">
        <div id="a@{@prod.Id.ToString().Replace("-","");}" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" style="height:400px; width:auto">
                @foreach (var iitem in prod.Images.Select((value, index) => new { value, index }))
                {
                    <div class="carousel-item @(iitem.index == 0 ?"active":"")">
                        <img class="d-block img-fluid mx-auto"
                        src="data:image/png;base64,@Convert.ToBase64String(iitem.value.Image)">
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button"
                data-bs-target="#a@{@prod.Id.ToString().Replace("-","");}" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button"
                data-bs-target="#a@{@prod.Id.ToString().Replace("-","");}" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="col-sm-12 col-md-8">
        <h5 class="">@prod.Title</h5>
        <table class="table border">
            <tr>
                <td>Title</td>
                <td>@prod.Title</td>
            </tr>
            <tr>
                <td>Description</td>
                <td>@prod.Desc</td>
            </tr>
            <tr>
                <td>Avaibility</td>
                <td>@prod.StoreQty</td>
            </tr>
            <tr>
                <td>Price</td>
                <td>@prod.UnitPrice</td>
            </tr>
            <tr>
                <td>Tax</td>
                <td>@prod.tax.ToString("0.00") %</td>
            </tr>
            <tr>
                <td>Specification</td>
                <td>@prod.specification</td>
            </tr>
        </table>
    </div>
</div>
